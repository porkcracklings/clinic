<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" 
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- Authorization page -->
    <navigation-rule>
        <from-view-id>/authorization.xhtml</from-view-id>

        <!-- Authorization success -->
        <navigation-case>
            <from-action>#{authorizationBean.authorization}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
        </navigation-case>

        <!-- Authorization fail -->
        <navigation-case>
            <from-action>#{authorizationBean.authorization}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>

        <!-- Registration page link -->
        <navigation-case>
            <from-outcome>registration</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!-- Registration page -->
    <navigation-rule>
        <from-view-id>/registration.xhtml</from-view-id>

        <!-- Registration success -->
        <navigation-case>
            <from-action>#{registrationBean.registration}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
        </navigation-case>

        <!-- Registration fail -->
        <navigation-case>
            <from-action>#{registrationBean.registration}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
        </navigation-case>

        <!-- Authorization page link -->
        <navigation-case>
            <from-outcome>authorization</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

